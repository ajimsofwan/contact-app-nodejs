<div class="row">
  <div class="col-md-8">
    <h2>Daftar Contact</h2>
    <a href="/contact/add" class="btn btn-success mb-3">Tambah Data Contact</a>
    <% if (msg.length !== 0) {%>
    <div class="alert alert-success" role="alert"><%= msg %></div>
    <% } %>
    <span></span>
    <% if (contacts.length === 0) {%>
    <div class="alert alert-danger" role="alert">Data contact belum ada!.</div>
    <% } else { %>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Nama</th>
          <th scope="col">No HP</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <% let no = 1; %> <% contacts.forEach(contact => { %>
        <tr>
          <th scope="row"><%= no++ %></th>
          <td><%= contact.nama %></td>
          <td><%= contact.nohp %></td>
          <td>
            <a
              href="/contact/<%= contact._id.valueOf() %>"
              class="btn btn-sm btn-success"
              >Detail</a
            >
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <% } %>
  </div>
</div>
